times = times()
seu_time = input('Digite o nome do seu time: ')

def mostrando_time(times,p1):

    #Menus dentro do time

    while True:

        ver = int(input('[1] - Jogadores / [2] - Gerenciamento do clube\n: '))

        if ver == 1:

            print('-'*150)
            print(f'{p1}')
            print('-' * 150)
            print(f'{"Jogadores":<20} {"Posicao":>22} {"Forca":>22}{"Idade":>22}{"Nacionalidade":>22}')
            print('-'*150)

            for chave,valor in times[p1].items():

                if chave == 'Jogadores':
                    for jogador,caracteristica in valor.items():
                        print(f'{jogador:<20}',end = '  -  ')
                        for key,value in caracteristica.items():
                            print(f'{value:>20}',end = ' ')
                        print()

        elif ver == 2:
            print('-'*150)
            print(f'{"Estadio":<30} {"Capacidade":^17}{"Reputacao":^27}')
            print('-'*150)
            print(f'{times[p1]['estadio']:<30}{times[p1]['capacidade']:^20}{times[p1]['reputacao']:^25}')





mostrando_time(times,seu_time)



